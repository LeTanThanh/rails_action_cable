<div class="container">
  <h2>Create Chat Room</h1>
  <p>Create your chat room or <%= link_to "Back to Chat Room List", chat_rooms_path %></p>

  <%= form_for @chat_room, html: {class: "form-horizontal"} do |f| %>
    <div class="form-group">
      <%= f.label :title, class: "control-label col-sm-2" %>
      <div class="col-sm-10">
        <%= f.text_field :title, class: "from-control", autofocus: true, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= f.submit "Create", class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>
</div>
